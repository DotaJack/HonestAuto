@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid homepage">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto text-center">
            <h1 class="display-4">Welcome to Our Car Selling Website</h1>
            <p>Find the perfect car for your needs</p>

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Home" asp-action="Contact" class="btn btn-primary">Contact Us</a>
            }

        </div>
    </div>
</div>

<style>
    .homepage {
        background-image: url('/backgroundpic.jpg'); /* Use the actual image file name */
        background-size: cover;
        background-position: center;
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        height: 100vh;
        display: flex;
        align-items: center;
    }
</style>
