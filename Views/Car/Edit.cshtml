@model HonestAuto.Models.ViewModels.CarAndEvaluationViewModel

@{
    ViewData["Title"] = "Edit Car";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Car form fields -->
    <div class="form-group">
        <label asp-for="Car.Brand">Brand</label>
        <input asp-for="Car.Brand" class="form-control" />
        <span asp-validation-for="Car.Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Model">Model</label>
        <input asp-for="Car.Model" class="form-control" />
        <span asp-validation-for="Car.Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Mileage">Mileage</label>
        <input asp-for="Car.Mileage" class="form-control" />
        <span asp-validation-for="Car.Mileage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Year">Year</label>
        <input asp-for="Car.Year" class="form-control" />
        <span asp-validation-for="Car.Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.History">History</label>
        <input asp-for="Car.History" class="form-control" />
        <span asp-validation-for="Car.History" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.UserID">UserID</label>
        <input asp-for="Car.UserID" class="form-control" />
        <span asp-validation-for="Car.UserID" class="text-danger"></span>
    </div>

    <!-- CarEvaluation form fields -->
    <div class="form-group">
        <label asp-for="CarEvaluation.MechanicID">Mechanic ID</label>
        <input asp-for="CarEvaluation.MechanicID" class="form-control" />
        <span asp-validation-for="CarEvaluation.MechanicID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarEvaluation.EvaluationSummary">EvaluationSummary ID</label>
        <input asp-for="CarEvaluation.EvaluationSummary" class="form-control" />
        <span asp-validation-for="CarEvaluation.EvaluationSummary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarEvaluation.EvaluationDate">EvaluationDate ID</label>
        <input asp-for="CarEvaluation.EvaluationDate" class="form-control" />
        <span asp-validation-for="CarEvaluation.EvaluationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarEvaluation.EvaluationStatus">EvaluationStatus ID</label>
        <input asp-for="CarEvaluation.EvaluationStatus" class="form-control" />
        <span asp-validation-for="CarEvaluation.EvaluationStatus" class="text-danger"></span>
    </div>

    <!-- Repeat for other CarEvaluation properties -->

    <button type="submit" class="btn btn-primary">Save</button>
</form>
