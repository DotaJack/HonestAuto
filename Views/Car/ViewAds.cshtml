@model IEnumerable<HonestAuto.Models.CarViewModel>

<!DOCTYPE html>
<html data-bs-theme="light">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Contact - Honest Auto</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Lato.css">
    <link rel="stylesheet" href="~/css/pikaday.min.css">
</head>

<body>
    <main class="page contact-page">
        <section class="portfolio-block contact">
            <div class="container">
                <div class="heading">
                    <h2>All Ads</h2>
                </div>
                @foreach (var car in Model)
                {
                    <div>
                        <div class="card">
                            <div class="card-body">
                                <p>User: @car.UserEmail</p>
                                <!-- Display car image -->
                                @if (car.CarImage != null && car.CarImage.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(car.CarImage)" class="img-fluid" alt="Car Image" width="200" />
                                }
                                else
                                {
                                    <p>No Image</p>
                                }
                                <!-- Display car details -->
                                <p>@car.BrandName @car.ModelName @car.Year</p>
                                <p>Mileage: @car.Mileage</p>
                                <p>History: @car.History</p>
                                <p>Price: @string.Format("{0:C}", car.CarValue)</p>
                                <!-- Replace the button with ASP action -->
                                <div class="mb-3 mt-4">
                                    <a href="@Url.Action("Details", "Car", new { id = car.CarID })" class="btn btn-info"><span style="color: rgb(255, 255, 255);">View Car</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </main>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/pikaday.min.js"></script>
    <script src="~/js/theme.js"></script>
</body>

</html>
