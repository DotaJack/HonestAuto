@model IEnumerable<HonestAuto.Models.Car>

@{
    ViewData["Title"] = "Cars List";
}

<h1>Cars</h1>
<form method="get" action="@Url.Action("Index", "Car")">
    <div class="input-group mb-3">
        <input type="text" name="searchYear" class="form-control" placeholder="Search by year">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Car ID</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Year</th>
                <th>Mileage</th>
                <th>History</th>
                <th>UserID</th>
<th>Car Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarID</td>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.Mileage</td>
                    <td>@car.History</td>
<td>@car.UserID</td>
                    <td>
                        @if (car.CarImage != null && car.CarImage.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(car.CarImage)" style="width:100px; height:auto;" />
                        }
                        else
                        {
                            <text>No Image</text>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-warning">Edit</a>
                        }
                        <a asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}

<a asp-action="Create" class="btn btn-success">Create New Car</a>
