@model List<HonestAuto.Models.CarViewModel>

<!DOCTYPE html>
<html data-bs-theme="light" lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Table - Honest Auto</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700&amp;display=swap">
    <link rel="stylesheet" href="~/css/pikaday.min.css">
</head>
<body id="page-top">
    <div id="wrapper">
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <div class="container-fluid">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 fw-bold">Cars Registered On Honest Autos</p>
                        </div>
                        <div class="card-body">
                            @if (Model.Any())
                            {
                                <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                                    <table class="table my-0" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>Car ID</th>
                                                <th>Brand</th>
                                                <th>Model</th>
                                                <th>Year</th>
                                                <th>Mileage</th>
                                                <th>History</th>
                                                <th>User</th>
                                                <th>Registration</th>
                                                <th>Status</th>
                                                <th>Colour</th>
                                                <th>Image</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var car in Model)
                                            {
                                                <tr>
                                                    <td>@car.CarID</td>
                                                    <td>@car.BrandName</td>
                                                    <td>@car.ModelName</td>
                                                    <td>@car.Year</td>
                                                    <td>@car.Mileage</td>
                                                    <td>@car.History</td>
                                                    <td>@car.UserEmail</td>
                                                    <td>@car.Registration</td>
                                                    <td>@car.Status</td>
                                                    <td>@car.Colour</td>
                                                    <td>
                                                        @if (car.CarImage != null && car.CarImage.Length > 0)
                                                        {
                                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(car.CarImage)" style="width:100px; height:auto;" />
                                                        }
                                                        else
                                                        {
                                                            <text>No Image</text>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary">Details</a>
                                                        <a asp-action="ChangeStatus" asp-route-id="@car.CarID" class="btn btn-primary">Change Status</a>
                                                        <a asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-warning">Edit</a>
                                                        <a asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-danger">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p>No results found.</p>
                            }

                            <a asp-action="Create" class="btn btn-success">Create New Car</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/pikaday.min.js"></script>
    <script src="~/js/theme.js"></script>
</body>

</html>
