@model List<HonestAuto.Models.CarViewModel>

<h1>Cars</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
            <tr>
                <th>Car ID</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Year</th>
                <th>Mileage</th>
                <th>History</th>
                <th>User</th>
                <th>Registration</th> 
                <th>Status</th> 
                <th>Colour</th> 
                <th>Car Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarID</td>
                    <td>@car.BrandName</td>
                    <td>@car.ModelName</td>
                    <td>@car.Year</td>
                    <td>@car.Mileage</td>
                    <td>@car.History</td>
                    <td>@car.UserEmail</td>
                    <td>@car.Registration</td> 
                    <td>@car.Status</td> 
                    <td>@car.Colour</td> 
                    <td>
                        @if (car.CarImage != null && car.CarImage.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(car.CarImage)" style="width:100px; height:auto;" />
                        }
                        else
                        {
                            <text>No Image</text>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary">Details</a>
                        <a asp-action="ChangeStatus" asp-route-id="@car.CarID" class="btn btn-primary">ChangeStatus</a>
                        <a asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}

<a asp-action="Create" class="btn btn-success">Create New Car</a>
