@model List<HonestAuto.Models.CarViewModel>

<h1>Cars</h1>

@if (Model.Any())
{
    <!-- Display table if there are cars -->
    <table class="table">
        <thead>
            <tr>
                <th>Car ID</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Year</th>
                <th>Mileage</th>
                <th>History</th>
                <th>User ID</th>
                <th>Registration</th>
                <th>Status</th>
                <th>Colour</th>
                <th>Car Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Iterate through each car in the model -->
            @foreach (var car in Model)
            {
                <tr>
                    <!-- Display car details in each row -->
                    <td>@car.CarID</td>
                    <td>@car.BrandName</td>
                    <td>@car.ModelName</td>
                    <td>@car.Year</td>
                    <td>@car.Mileage</td>
                    <td>@car.History</td>
                    <td>@car.UserID</td>
                    <td>@car.Registration</td>
                    <td>@car.Status</td>
                    <td>@car.Colour</td>
                    <td>
                        <!-- Display car image if available -->
                        @if (car.CarImage != null && car.CarImage.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(car.CarImage)" style="width:100px; height:auto;" />
                        }
                        else
                        {
                            <!-- Display text if no image available -->
                            <text>No Image</text>
                        }
                    </td>
                    <td>
                        <!-- Action buttons for details, status change, editing, and deletion -->
                        <a asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary">Details</a>
                        @if (car.IsEvaluationComplete)
                        {
                            <a asp-action="ChangeStatus" asp-route-id="@car.CarID" class="btn btn-primary">Change Status</a>
                        }
                        <a asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <!-- Display message if no cars found -->
    <p>No results found.</p>
}

<!-- Button to create a new car -->
<a asp-action="Create" class="btn btn-success">Create New Car</a>
