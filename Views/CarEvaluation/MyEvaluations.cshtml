@model IEnumerable<IGrouping<string, HonestAuto.Models.CarEvaluation>>

<!DOCTYPE html>
<html data-bs-theme="light" lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Table - Honest Auto</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700&amp;display=swap">
    <link rel="stylesheet" href="~/css/pikaday.min.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <div class="container-fluid">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 fw-bold">Car Evaluations On Honest Autos</p>
                        </div>
                        <div class="card-body">

                            @foreach (var group in Model)
                            {
                                <h2>@group.Key</h2>
                                <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                                    <table class="table my-0" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Car ID</th>
                                                <th>Mechanic ID</th>
                                                <th>Summary</th>
                                                <th>Status</th>
                                                <th>Value</th>
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in group)
                                            {
                                                <tr>
                                                    <td>@item.CarEvaluationID</td>
                                                    <td>@item.CarID</td>
                                                    <td>@item.MechanicID</td>
                                                    <td>@item.EvaluationSummary</td>
                                                    <td>@item.EvaluationStatus</td>
                                                    <td>@item.CarValue</td>
                                                    <td>@item.EvaluationDate.ToString("d")</td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.CarEvaluationID" class="btn btn-warning">Edit</a>
                                                        <a asp-action="Details" asp-route-id="@item.CarEvaluationID" class="btn btn-primary">Details</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/pikaday.min.js"></script>
    <script src="~/js/theme.js"></script>
</body>

</html>
