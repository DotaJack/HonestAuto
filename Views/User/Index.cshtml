@model IEnumerable<HonestAuto.Models.User>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Users</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Role</th> <!-- Added Role -->
                <th>Profile Image</th> <!-- Added Profile Image -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>@user.Role</td> <!-- Display Role -->
       
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.UserID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No buyers available.</p>
}
